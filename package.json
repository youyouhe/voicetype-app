{
  "name": "voicetype",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build-debug": "tauri build --debug",
    "release": "powershell -ExecutionPolicy Bypass -File build_release.ps1",
    "release:debug": "powershell -ExecutionPolicy Bypass -File build_release.ps1 -Configuration debug",
    "release:nobuild": "powershell -ExecutionPolicy Bypass -File build_release.ps1 -SkipBuild",
    "release:cuda": "powershell -ExecutionPolicy Bypass -File build_release_cuda.ps1",
    "cuda:download": "powershell -ExecutionPolicy Bypass -File scripts/manual_cuda_download.ps1",
    "cuda:copy": "powershell -ExecutionPolicy Bypass -File scripts/copy_local_cuda_dlls.ps1"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tauri-apps/cli": "^2",
    "autoprefixer": "^10.4.22",
    "lightningcss": "^1.30.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
