{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VoiceType",
  "version": "0.2.0",
  "identifier": "com.voicetype.app",
  "build": {
    "beforeDevCommand": "cd src && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cd src && npm run build",
    "frontendDist": "../src/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "VoiceType",
        "width": 800,
        "height": 600,
        "resizable": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "VoiceType Team",
    "copyright": "Copyright Â© 2025 VoiceType Team",
    "category": "Productivity",
    "shortDescription": "AI Voice Assistant with local Whisper support",
    "longDescription": "VoiceType is an AI-powered voice assistant that runs locally on your machine, featuring speech recognition through Whisper and intelligent text input capabilities.",
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
