{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flash-Input",
  "version": "0.1.0",
  "identifier": "com.martin.flash-input",
  "build": {
    "beforeDevCommand": "cd src && npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd src && npm run build",
    "frontendDist": "../src/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Flash-Input",
        "width": 800,
        "height": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  },
  "plugins": {
  }
}
